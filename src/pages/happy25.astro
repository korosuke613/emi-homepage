---
import { Box, Grid } from "@mui/joy";
import { Typography } from "../components/Typography";
import type { Languages } from "../i18n/ui";
import { useLocalTranslations, useSharedTranslations } from "../i18n/utils";
import Layout from "../layouts/Layout.astro";

interface Props {
  lang: Languages;
}

const props = Astro.props;

const lang = props.lang ?? "ja";
const t = useSharedTranslations(lang);
const tl = useLocalTranslations(lang);
---

<Layout title={tl({
	ja: "牧浦えみ！祝 25 歳！！",
	en: "Emi Makura! Happy 25th Birthday!!",
	lo: "Emi Makura! ສຸກສານວັນເກີດ 25 ປີ!!",
})} description={t('description')} lang={lang} noindex={true}>
	<Box 
		sx={{ 
			height: "10rem",    
			textAlign: "center",
			justifyContent: "center" 
		}}
	>	
		<Grid container spacing={2} sx={{ flexGrow: 1 }}>
			<Grid xs={12}>
				<Box
					component="img"
					alt=""
					src="/happy25.jpg"
					width="100%"
					maxWidth={1200}
					maxHeight={555}
					sx={{
						borderRadius: "0.5rem",
					}}
				/>
			</Grid>

			<Grid xs={12}>
				<Typography level="h4">
					{tl({
						ja: "めでたいねぇ",
						en: "Congratulations!",
						lo: "ຂໍແສດງ!",
					})}
				</Typography>
			</Grid>
		</Grid>
	</Box>
</Layout>