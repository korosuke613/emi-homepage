---
import { About } from "../components/Page/About";
import type { Languages } from "../i18n/ui";
import { useLocalTranslations, useSharedTranslations, useContentTranslations } from "../i18n/utils";
import Layout from "../layouts/Layout.astro";

interface Props {
  lang: Languages;
}

const props = Astro.props;

const lang = props.lang ?? "ja";
const t = useSharedTranslations(lang);
const tl = useLocalTranslations(lang);
const content = useContentTranslations(lang);
---

<Layout title={t('title')} description={t('description')} lang={lang} secondTitle={content.pages("牧浦えみのホームページへようこそ！")}>

<About lang={lang}/>

</Layout>
